{
	"name": "Photopea",
	"short_name": "Photopea",
	"display": "standalone",
	"display_override": ["window-controls-overlay"],
	"icons": [
		{ "src": "promo/icon512.png", "type": "image/png", "sizes": "512x512" },
		{ "src": "promo/maskable512.png", "type": "image/png", "sizes": "512x512", "purpose": "maskable" }
	],
	"start_url": "/photopea/?utm_source=homescreen",
	"scope": "/photopea/",
	"background_color": "#0f171d",
	"theme_color": "#474747",
	"file_handlers": [
		{ "action": "/photopea/", "accept": { "image/psd": [".psd"] } },
		{ "action": "/photopea/", "accept": { "image/jpeg": [".jpeg", ".jpg"] } },
		{ "action": "/photopea/", "accept": { "image/png": [".png"] } },
		{ "action": "/photopea/", "accept": { "image/webp": [".webp"] } },
		{ "action": "/photopea/", "accept": { "image/bmp": [".bmp"] } },
		{ "action": "/photopea/", "accept": { "image/gif": [".gif"] } },
		{ "action": "/photopea/", "accept": { "image/svg+xml": [".svg"] } },
		{ "action": "/photopea/", "accept": { "application/pdf": [".pdf"] } },
		{ "action": "/photopea/", "accept": { "image/tiff": [".tif", ".tiff"] } },
		{ "action": "/photopea/", "accept": { "image/ai": [".ai"] } },
		{ "action": "/photopea/", "accept": { "image/psb": [".psb"] } },
		{ "action": "/photopea/", "accept": { "image/xcf": [".xcf"] } },
		{ "action": "/photopea/", "accept": { "image/sketch": [".sketch"] } },
		{ "action": "/photopea/", "accept": { "image/xd": [".xd"] } },
		{ "action": "/photopea/", "accept": { "image/pxd": [".pxd"] } },
		{ "action": "/photopea/", "accept": { "image/cdr": [".cdr"] } },
		{ "action": "/photopea/", "accept": { "image/eps": [".eps", ".ps"] } },
		{ "action": "/photopea/", "accept": { "image/x-icon": [".ico"] } },
		{ "action": "/photopea/", "accept": { "image/jpx": [".jpx"] } },
		{ "action": "/photopea/", "accept": { "image/jp2": [".jp2"] } },
		{ "action": "/photopea/", "accept": { "image/x-tga": [".tga"] } },
		{ "action": "/photopea/", "accept": { "image/vnd-ms.dds": [".dds"] } },
		{ "action": "/photopea/", "accept": { "image/x-adobe-dng": [".dng"] } },
		{ "action": "/photopea/", "accept": { "image/x-nikon-nef": [".nef"] } },
		{ "action": "/photopea/", "accept": { "image/x-canon-cr2": [".cr2", ".cr3"] } },
		{ "action": "/photopea/", "accept": { "image/x-sony-arw": [".arw"] } },
		{ "action": "/photopea/", "accept": { "image/x-fuji-raf": [".raf"] } },
		{ "action": "/photopea/", "accept": { "image/x-olympus-orf": [".orf"] } },
		{ "action": "/photopea/", "accept": { "image/x-panasonic-raw": [".rw2"] } }
	],
	"share_target": {
		"action": "/photopea/",
		"method": "POST",
		"enctype": "multipart/form-data",
		"params": {
			"files": [
				{
					"name": "image",
					"accept": ["image/jpeg", "image/png", "image/webp", "image/gif"]
				}
			]
		}
	}
}
